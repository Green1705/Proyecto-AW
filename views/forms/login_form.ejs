<%- include('../partials/head', { title: 'Iniciar Sesión' }) %>

<main class="login-page">
	<section class="login-frame">
		<h1>Iniciar sesión</h1>
		<p class="login-intro">Introduce tus credenciales para continuar.</p>

		<form action="/login" method="POST" class="login-form">
			<div class="form-group">
				<label for="email">Correo electrónico</label>
				<input type="email" id="email" name="email" placeholder="tu@correo.com" required>
			</div>
			<div class="form-group">
				<label for="password">Contraseña</label>
				<input type="password" id="password" name="password" placeholder="••••••••" required>
			</div>
			<button type="submit" class="btn-submit">Acceder</button>
		</form>
	</section>
</main>

<style>
	:root {
		--frame-bg: #f2f3f7;
		--primary-bg: #ffffff;
		--accent: #0d6efd;
		--text-muted: #6c757d;
	}

	.login-page {
		min-height: calc(100vh - 64px);
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--primary-bg);
		padding: 2rem;
	}

	.login-frame {
		width: min(60vw, 720px);
		min-height: 60vh;
		background: var(--frame-bg);
		border: 1px solid #d8dbe4;
		border-radius: 1rem;
		box-shadow: 0 1rem 2.5rem rgba(15, 23, 42, 0.12);
		padding: clamp(2rem, 4vw, 3rem);
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	.login-frame h1 {
		margin-bottom: 0.5rem;
	}

	.login-intro {
		color: var(--text-muted);
		margin-bottom: 2rem;
	}

	.login-form {
		width: 100%;
		max-width: 420px;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		align-self: center;
	}

	.form-group {
		display: flex;
		flex-direction: column;
		text-align: left;
	}

	.form-group label {
		font-weight: 600;
		margin-bottom: 0.5rem;
	}

	.form-group input {
		border: 1px solid #cfd4df;
		border-radius: 0.5rem;
		padding: 0.85rem 1rem;
		font-size: 1rem;
	}

	.form-group input:focus {
		outline: 3px solid rgba(13, 110, 253, 0.15);
		border-color: var(--accent);
	}

	.btn-submit {
		border: none;
		border-radius: 999px;
		padding: 0.9rem 1rem;
		font-size: 1rem;
		font-weight: 600;
		background: var(--accent);
		color: #fff;
		cursor: pointer;
		transition: background 0.2s ease-in-out;
	}

	.btn-submit:hover {
		background: #0b5ed7;
	}

	@media (max-width: 768px) {
		.login-frame {
			width: 100%;
			min-height: auto;
		}
	}
</style>

<%- include('../partials/footer') %>
