<%- include('partials/head', { title: 'Panel de administración' }) %>
<%- include('partials/navbar') %>

<main class="container py-5">
	<header class="mb-5">
		<h1 class="h3 mb-1">Panel de administración</h1>
	</header>

	<section class="admin-sections-grid mb-4">
		<div class="admin-section-card p-4">
			<div class="d-flex align-items-center justify-content-between mb-3">
				<div>
					<h2 class="h5 mb-1">Gestión de vehículos</h2>
				</div>
				<a href="/admin/vehiculos" class="admin-section-link d-flex align-items-center justify-content-center text-center">Abrir</a>
			</div>
		</div>

		<div class="admin-section-card p-4">
			<div class="d-flex align-items-center justify-content-between mb-3">
				<div>
					<h2 class="h5 mb-1">Gestión de concesionarios</h2>
				</div>
				<a href="/admin/concesionarios" class="admin-section-link d-flex align-items-center justify-content-center text-center">Abrir</a>
			</div>
		</div>

		<div class="admin-section-card p-4">
			<div class="d-flex align-items-center justify-content-between mb-3">
				<div>
					<h2 class="h5 mb-1">Gestión de empleados</h2>
				</div>
				<a href="/admin/empleados" class="admin-section-link d-flex align-items-center justify-content-center text-center">Abrir</a>
			</div>
		</div>

		<div class="admin-section-card p-4">
			<div class="d-flex align-items-center justify-content-between mb-3">
				<div>
					<h2 class="h5 mb-1">Reservas y operaciones</h2>
				</div>
				<a href="/reserva" class="admin-section-link d-flex align-items-center justify-content-center text-center">Abrir</a>
			</div>
		</div>
	</section>
</main>

<style>
	.admin-sections-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 1.5rem;
	}

	.admin-sections-grid .admin-section-card {
		flex: 1 1 calc(50% - 1.5rem);
	}

	.admin-section-card {
		border: 1px solid #e2e8f0;
		border-radius: 0.75rem;
		background-color: #ffffff;
		box-shadow: 0 1rem 2rem rgba(15, 23, 42, 0.08);
	}

	.admin-section-link {
		width: 20%;
		min-height: 100%;
		border: 1px solid #0d6efd;
		border-radius: 0.5rem;
		color: #0d6efd;
		font-weight: 600;
		padding: 0.75rem;
		text-decoration: none;
	}

	.admin-section-link:hover {
		background-color: #0d6efd;
		color: #ffffff;
	}

	.stat-tile {
		border: 1px solid #e3e6ef;
		border-radius: 0.75rem;
		padding: 1rem;
		background-color: #f8f9fc;
	}
</style>

<%- include('partials/footer') %>
